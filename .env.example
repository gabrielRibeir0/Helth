# ====================================
# Configurações de Base de Dados
# ====================================
POSTGRES_HOST=localhost
POSTGRES_DB=helth_db
POSTGRES_USER=helth_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_PORT=5432

MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=helth_db

CHROMA_HOST=localhost
CHROMA_PORT=8000

# ====================================
# Configuração MedGemma LLM
# ====================================

# Provider: "ollama", "huggingface", ou "vertexai"
MEDGEMMA_PROVIDER=ollama

# Tamanho do modelo (apenas para HuggingFace): "2b" ou "7b"
MEDGEMMA_MODEL_SIZE=2b

# Device (apenas para HuggingFace): "auto", "cuda", "cpu"
MEDGEMMA_DEVICE=auto

# Usar quantização 4-bit? (apenas HuggingFace): "true" ou "false"
# Recomendado: true para GPUs <16GB
MEDGEMMA_QUANTIZATION=true

# Temperatura (0.0 = determinístico, 1.0 = criativo)
MEDGEMMA_TEMPERATURE=0.7

# ====================================
# Google Cloud (apenas se provider=vertexai)
# ====================================
# GOOGLE_CLOUD_PROJECT=seu-projeto-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GCP_LOCATION=us-central1

# ====================================
# Ollama (apenas se provider=ollama)
# ====================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=medgemma

# ====================================
# Aplicação
# ====================================
APP_NAME=HELTH
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# ====================================
# Segurança (MUDAR EM PRODUÇÃO!)
# ====================================
SECRET_KEY=change_this_to_random_string_in_production